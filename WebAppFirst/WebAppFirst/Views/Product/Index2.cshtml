@model IEnumerable<WebAppFirst.Models.Products>

@{
    ViewBag.Title = "Index2";
}

<h2>Index</h2>
<h4>Products @Model.Count() kappaletta</h4>

<div class="container-fluid">
<div class="row">
    @foreach (WebAppFirst.Models.Products prod in Model)
    {
        <div class="col-lg-3">
            <div class="card mb-3">
                <h3 class="card-header">@prod.ProductName</h3>
                <div class="card-body">
                    <h5 class="card-title">@prod.QuantityPerUnit</h5>
                    <h6 class="card-subtitle text-muted">@prod.UnitsInStock</h6>
                </div>
                @*<svg xmlns="@prod.ImageLink" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
