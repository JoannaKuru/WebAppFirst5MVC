                    </svg>*@
                @*<div class="card-body">  turha
                        <p class="card-text">xxqqxx</p>
                    </div>*@
                <img style="height: 200px; width:100%; display:block;" src="@prod.ImageLink" alt="@prod.ImageLink">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@prod.UnitPrice</li>
                    <li class="list-group-item">@prod.UnitsOnOrder</li>
                    <li class="list-group-item">@prod.ReorderLevel</li>
                </ul>
                <div class="card-body">
                    <a href="#" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a>
                </div>
                @*<div class="card-footer text-muted">   turha
                        2 days ago
                    </div>*@
                @*</div>*@
            </div>

            <button class="btn btn-primary showProductId" data-ProductID="@prod.ProductID">Muokkaa</button>

            @*<script>
                    function naytaValittuTuote(tuoteID) {
                        alert(tuoteID);
                    }
                </script>*@
        </div>
    }
</div>
</div>



